{
    "name": "qsnh/meedu",
    "description": "A video system about edu.",
    "keywords": ["video", "edu", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.1.3",
        "emojione/emojione": "^3.1",
        "erusev/parsedown": "^1.7",
        "fideloper/proxy": "^4.0",
        "hyancat/aliyun-direct-mail": "dev-master",
        "laravel/framework": "5.7.*",
        "laravel/passport": "^7.0",
        "laravel/tinker": "~1.0",
        "league/html-to-markdown": "^4.8",
        "maatwebsite/excel": "^3.0",
        "mews/captcha": "^2.2",
        "mews/purifier": "^2.1",
        "overtrue/easy-sms": "^1.1",
        "overtrue/pinyin": "~3.0",
        "spatie/laravel-backup": "5.10.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3",
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "laravel/browser-kit-testing": "^4.0",
        "mockery/mockery": "~1.0",
        "symfony/thanks": "^1.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": [
            "./app/helper.php",
            "./app/Meedu/Aliyun/aliyun-php-sdk-core/Config.php"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "test": "./vendor/bin/phpunit"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
